// Konfiguracja bitÃ³w PIC24FJ128GA010
#pragma config POSCMOD = XT
#pragma config OSCIOFNC = ON
#pragma config FCKSM = CSDCMD
#pragma config FNOSC = PRI
#pragma config IESO = ON
#pragma config WDTPS = PS32768
#pragma config FWPSA = PR128
#pragma config WINDIS = ON
#pragma config FWDTEN = OFF
#pragma config ICS = PGx2
#pragma config GWRP = OFF
#pragma config GCP = OFF
#pragma config JTAGEN = OFF

#include <xc.h>
#include "lcd.h"
#include "libpic30.h"
#include <stdint.h>
#include <string.h>

#define FCY 4000000UL
#define HEART 0

const uint8_t char_data_heart[8] = {
    0b01010,
    0b11111,
    0b11111,
    0b01110,
    0b00100,
    0b00000,
    0b00000,
    0b00000
};

// Tekst bez niedozwolonych znakÃ³w (â™¥ dodajemy osobno)
const char reklama[] = " Kup PIC â€“ programuj z mocÄ…! ðŸ”§   ";

void delay_ms(unsigned long ms) {
    __delay32((FCY / 1000) * ms);
}

void wyswietl_przesuwany_tekst(const char* tekst) {
    char bufor[17];
    size_t dl = strlen(tekst);

    for (size_t i = 0; i <= dl - 15; i++) {
        strncpy(bufor, &tekst[i], 15);
        bufor[15] = '\0';

        LCD_ClearScreen();
        LCD_PutChar(HEART);  // Dodajemy serduszko przed tekstem
        LCD_PutString(bufor, strlen(bufor));
        delay_ms(300);
    }
}

int main(void) {
    LCD_Initialize();
    LCD_ClearScreen();

    LCD_CreateChar(HEART, char_data_heart);
    TRISA = 0x0000;

    LCD_PutChar(HEART);
    LCD_PutString(" Reklama PIC", 13);
    delay_ms(1500);

    while (1) {
        wyswietl_przesuwany_tekst(reklama);
    }

    return 0;
}
